<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/search_controls_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="4dp"
        android:background="@drawable/components_search_background"
        android:src="@drawable/components_search_forward" />

    <ImageButton
        android:id="@+id/search_controls_prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_toStartOf="@id/search_controls_next"
        android:background="@drawable/components_search_background"
        android:src="@drawable/components_search_backward" />

    <EditText
        android:id="@+id/search_controls_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/search_controls_prev"
        android:layout_alignBottom="@id/search_controls_prev"
        android:layout_centerVertical="true"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="2dp"
        android:layout_toStartOf="@id/search_controls_prev"
        android:background="@drawable/components_search_background"
        android:gravity="center"
        android:inputType="text"
        android:singleLine="true"
        android:textColor="@color/actionbar_white" />

</RelativeLayout>
